{% extends 'adminBase.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container">
        <h1>Article</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ article.link }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Picture</th>
               <td> <img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{ article.imageName}}" /></td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ article.tags }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('articles_edit', {'id': article.id}) }}">edit</a>

        {{ include('articles/_delete_form.html.twig') }}
    </div>
{% endblock %}
